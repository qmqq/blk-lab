{
   "blockchain": {
        "type": "fabric",
        "config": "benchmark/smallbank/fabric-tls.json"
  },
  "command" : {
    "start": "docker-compose -f network/fabric/2org2peer/docker-compose-tls.yaml up -d",
    "end" : "docker-compose -f network/fabric/2org2peer/docker-compose-tls.yaml down;docker rm $(docker ps -aq);docker rmi $(docker images dev* -q)"
  },
  "test": {
    "name": "smallbank",
    "description" : "This is smallbank benchmark for caliper",
    "clients": {
      "type": "local",
      "number": 5
    },
    "rounds": [
      {
        "label" : "smallOperations",
        "txNumber" : [500],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 20}}],
        "arguments": {"accounts":400, "txnPerBatch":1},
        "callback" : "benchmark/smallbank/smallbankOperations.js"
      },
      {
        "label" : "query",
        "txNumber" : [500],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 50}}],
        "callback" : "benchmark/smallbank/query.js"
      }]
  },
  "monitor": {
    "type": "docker",
    "docker":{
      "name": ["all"]
    },
    "interval": 1
  }
}
